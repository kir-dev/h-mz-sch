<h1 class="mb-8 text-center text-3xl font-bold"><%= user.name %></h1>

<div id="<%= dom_id user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1 inline">Név:</strong>
    <%= user.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 inline">Email-cím:</strong>
    <%= user.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 inline">Jogosultsági kör:</strong>
    <%= I18n.t :"user_role.#{user.role}" %>
  </p>
</div>
