<%- if controller_name != 'sessions' %>
<div class="w-full flex justify-center">
  <%= link_to "Bejelentkezés", new_session_path(resource_name), class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="w-full flex justify-center">
  <%= link_to "Regisztáció", new_registration_path(resource_name), class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="w-full flex justify-center">
  <%= link_to "Elfelejtett jelszó", new_password_path(resource_name), class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="w-full flex justify-center">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="w-full flex justify-center">
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="w-full flex justify-center">
    <%= button_to "Bejelentkezés #{OmniAuth::Utils.camelize(provider)}-val", omniauth_authorize_path(resource_name, provider), method: :post, data: {turbo: "false"}, class: "mt-2 bg-gray-200 px-5 text-xs rounded-lg py-3 inline-block font-medium" %><br />
  </div>
  <% end %>
<% end %>
