<div class="px-4 py-16" id="services">
  <h1 class="mb-8 text-center text-3xl font-bold">Szolgáltatásaink</h1>

  <ul class="grid place-content-center sm:grid-cols-2 gap-8 mx-auto">
    <% @services.each do |service| %>
      <li class="flex justify-center">
        <div class="pl-6 pr-4 text-5xl font-extralight text-primary">01.</div>
        <div>
          <% frame_id = dom_id(service, "edit_turbo_frame") %>
          <%= turbo_frame_tag frame_id do %>
            <div class="text-xl font-bold text-primary block" style="width: 10rem">
              <%= service.title %>
              <% if admin? %>
                <%= link_to edit_site_content_path(service) do %>
                  <i class="fa-solid fa-pen-to-square text-black"></i>
                <% end %>
              <% end %>
            </div>
            <p class="max-w-xs py-2 text-sm">
              <%= service.content.to_plain_text %>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

