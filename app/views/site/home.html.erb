    <div class="hidden lg:block lg:w-1/2" style="clip-path:polygon(10% 0, 100% 0%, 100% 100%, 0 100%)">
      <div class="h-full object-cover"
           style="background-image: url(<%= image_url("hero4.jpg") %>); background-position: center; background-size: cover;">
        <div class="h-full bg-black opacity-25"></div>
      </div>
    </div>
  </div>
</div>

<% if @articles&.any? %>
  <div class="px-4 py-16">
    <h1 class="mb-8 text-center text-3xl font-bold">Legutóbbi híreink</h1>

    <ol class="justify-start sm:flex">
      <% @articles.each do |article| %>
        <li class="relative flex-1 mb-6 sm:mb-0">
          <div class="flex items-center">
            <div class="flex z-10 justify-center items-center w-18 h-18 bg-gray-100 rounded-full ring-0 ring-white shrink-0 ">
              <svg aria-hidden="true" class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="hidden sm:flex w-full bg-gray-200 h-0.5"></div>
          </div>
          <div class="mt-3 sm:pr-8">
            <%= link_to article.title, article_path(article), class: 'text-lg font-semibold text-primary' %>

            <time class="block mb-2 text-sm font-normal leading-none text-gray-400"><%= article.updated_at.in_time_zone('Budapest').strftime('%Y. %B %e. %H:%M') %></time>
            <p class="text-base font-normal text-gray-500"><%= article.intro.truncate(128, separator: ' ') %></p>
          </div>
        </li>

      <% end %>
    </ol>

    <div class="mt-10 flex items-center justify-center gap-4">
      <a href="/news" class="btn btn-primary">További híreink</a>
    </div>
  </div>
<% end %>


