<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Címke szerkesztése</h1>

  <%= render "form", label: @label %>

  <div class="flex flex-row flex-wrap mt-4" style="flex-wrap: wrap;" >
    <%= link_to "Vissza a címkékhez", labels_path, class: "btn btn-secondary" %>
    <%= button_to "Címke törlése", label_path(@label), method: :delete, form: { data: { 'turbo_confirm': 'Biztos vagy benne? A törlés végleges!' } }, class: "btn btn-danger ml-3" %>
  </div>
</div>
