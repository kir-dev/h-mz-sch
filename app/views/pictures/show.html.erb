<div class="grid grid-cols-1 gap-10 w-full md:grid-cols-2 ">
  <div>

    <%= image_tag @picture.img, alt: @picture.name %>
  </div>
  <!-- ... -->
  <div>

    <div>
      <span class="font-bold">Cím: </span>
      <%= @picture.name %>
      <hr/>
      <span class="font-bold">Készítő: </span>
      <%= @picture.author %>
      <hr/>
      <span class="font-bold">Leírás: </span>
      <%= @picture.description %>
    </div>

  </div>
  <div>
    <%= link_to 'Vissza a galériához', pictures_path, class: 'btn btn-secondary ', data: { turbo: false } %>
  </div>
</div>
