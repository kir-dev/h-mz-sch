<div id="<%= dom_id picture %>">

  <div class="relative max-w-sm rounded shadow-lg bg-white m-2 hover:shadow-xl">
    <%= image_tag picture.img, alt: picture.name, class: 'brightness-90 hover:brightness-100' %>
    <% if admin? %>
      <div class="absolute -top-1 -right-1 flex justify-start">
        <%= link_to edit_picture_path(picture), class: 'shadow-lg' do %>
          <i class="fa-solid fa-pen-to-square icon-edit mr-2 shadow-lg"></i>
        <% end %>

        <%= button_to picture_path(picture), class: 'shadow-lg', method: :delete, form: { data: { 'turbo_confirm': 'Biztos vagy benne? A törlés véglges!' } } do %>
          <i class="fa-solid fa-trash icon-delete shadow-lg"></i>
        <% end %>
      </div>
    <% end %>
    <div class="px-6 py-4 text-center">
      <div class="font-bold text-xl mb-2 text-primary"><%= picture.name %></div>
    </div>
  </div>
</div>
